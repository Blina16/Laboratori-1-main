# Backend environment example
# Use MSSQL or sqlite
DB_CLIENT=sqlite

# If using MSSQL with SQL Server auth
MSSQL_TRUSTED=false
MSSQL_SERVER=localhost\\SQLEXPRESS
MSSQL_DATABASE=YourDatabase
MSSQL_USER=sa
MSSQL_PASSWORD=your_password
MSSQL_PORT=1433
MSSQL_ENCRYPT=false
MSSQL_TRUST_SERVER_CERT=true

# If using Windows Authentication (trusted connection)
# Set MSSQL_TRUSTED=true and install msnodesqlv8
# MSSQL_SERVER should match SSMS instance name (e.g. DESKTOP-7PVJ96S\\MSSQLSERVER01)

# CORS origin to allow React dev server
CORS_ORIGIN=http://localhost:3000

# Optional: serve static frontend from backend when building
SERVE_STATIC=false
